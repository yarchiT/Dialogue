<!DOCTYPE html>
<html>
<head>
  <title>pChat &mdash; Private Chatroom</title>
  <link rel="stylesheet" href="@Url.Content("~/wwwroot/css/site.css")">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">pChat</a>
        </div>
      </div>
    </nav>
    <!-- / Navigation Bar -->

    <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <form action="/Home/Login" method="post" style="margin:0" autocomplete="off">
                <div class="form-group">
                  <input type="text" name="username" id="username" placeholder="Enter Username" class="form-control" required minlength="3" maxlength="15" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Enter Chat</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="@Url.Content("~/wwwroot/js/site.js")"></script>
</body>
</html>